<%- include("partials/header") %> 

<main class="py-5">
  <div class="container">
    <h3 class="text-center font-weight-bold text-uppercase"><i class="fas fa-paragraph"></i> EDIT POST</h3>
    <hr class="border-info">
    <div class="row mt-4">
      <div class="col-lg-8 offset-lg-2">
        <form action="/blog/<%= post.id %>?_method=PATCH" method="post">
          <div class="form-row">
            <div class="col-lg-12">
              <div class="form-group">
                <label class="small text-info font-weight-bold" for="title">Title</label>
                <input type="text" class="form-control" name="title" id="title" value="<%= post.title %>" placeholder="Enter the title of the post" autocomplete="off" required>
              </div>
            </div>
            <!-- col-lg-12  -->
            <div class="col-lg-6">
              <div class="form-group">
                <label class="small text-info font-weight-bold" for="author">Author</label>
                <input type="text" class="form-control" name="author" id="author" value="<%= post.author %>" placeholder="Name of the author" autocomplete="off" required>
              </div>
            </div>
            <!-- col-lg-6  -->
            <div class="col-lg-6">
              <div class="form-group">
                <label class="small text-info font-weight-bold" for="image_url">Post Image URL</label>
                <input type="text" class="form-control" name="image_url" id="image_url" value="<%= post.image_url %>" placeholder="Paste the image url here" autocomplete="off" required>
              </div>
            </div>
            <!-- col-lg-6  -->
            <div class="col-lg-12">
              <div class="form-group">
                <label class="small text-info font-weight-bold" for="text">Body</label>
                <textarea class="form-control" name="text" id="text" rows="14" placeholder="Enter the body for the post" required><%= post.text %></textarea>
              </div>
            </div>
            <!-- col-lg-12  -->
            <div class="col-lg-12">
              <div class="form-group">
                <label class="small text-info font-weight-bold" for="summary">Summary</label>
                <textarea class="form-control" name="summary" id="summary" rows="3" placeholder="Write the summary in around 25 words (150 characters allowed)" maxlength="150" required><%= post.summary %></textarea>
              </div>
            </div>
            <!-- col-lg-12  -->
          </div>
          <!-- form-row  -->
          <button type="submit" class="btn btn-success">Save <i class="fas fa-check"></i></button>
          <a href="/blog/<%= post.id %>" class="btn btn-secondary">Cancel <i class="fas fa-times"></i></a>
        </form>
        <!-- form  -->
      </div>
      <!-- col-lg-8  -->
    </div>
    <!-- row  -->
  </div>
  <!-- container  -->
</main>

<%- include("partials/footer") %> 